  <path d="M 460 210 C 550 150, 650 150, 740 210" stroke="#0077c2" stroke-width="2" fill="none" marker-end="url(#arrowhead)"/>
  <path d="M 925 310 C 985 350, 985 400, 925 490" stroke="#0077c2" stroke-width="2" fill="none" marker-end="url(#arrowhead)"/>
